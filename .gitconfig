[user]
    name = Andreas Lindh√©
    email = andreas@lindhe.io
[alias]
    bi = bisect
    bra = branch
    change = commit --amend -v
    cl = clone
    co = checkout
    com = commit -v
    coma = commit -av
    comam = commit -am
    comm = commit -m
    df = diff --color-words
    dif = diff
    dra = pull
    files-in = diff-tree --no-commit-id --name-only -r
    h = help
    knuff = push
    l = log --oneline --decorate
    lg = log --oneline --decorate
    log = log --decorate
    new = diff --cached
    pl = !git pull && git log ORIG_HEAD..HEAD
    reb = rebase
    rem = remote
    s = status
    sho = show
    sorry = commit --amend --no-edit
    st = status
    whatchanged = !git pull && git log ORIG_HEAD..HEAD
#   difftex = difftool -y -t latex
[branch]
    autosetuprebase = always
[pull]
    rebase = true
[credential]
    helper = cache
[core]
    excludesfile = ~/.gitignore_global
# [difftool.latex]
#    cmd = latexdiff "$LOCAL" "$REMOTE"
[push]
    default = simple
[color]
    status = always
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    required = true
