[user]
    name = Andreas Lindh√©
[alias]
    b = branch
    bi = bisect
    bra = branch -vv
    bras = for-each-ref --sort=-committerdate refs/heads --format='%(refname:short)|%(committerdate:relative)'
    c = commit -v
    ca = commit -av
    change = commit --amend -v
    cl = clone
    cm = commit -m
    co = checkout
    com = commit -v
    comm = commit -m
    cp = cherry-pick
    df = diff --color-words='\\w+'
    dff = diff --color-words='.'
    dif = diff
    email = config user.email andreas@lindhe.io
    files-in = diff-tree --no-commit-id --name-only -r
    get = "!~/scripts/git/git-get.py"
    get-gone = "!git branch -av | grep '\\[gone]' #"
    h = help
    knuff = push
    l = log --oneline --decorate
    lb = log --oneline --decorate --graph
    lob = log --oneline --decorate --graph --branches --color=always
    log = log --decorate
    nb = "!git switch -c lindhe/$(date +'%F')/${1} #"
    nwt = "!WTD=~/git/worktree/${1}; mkdir -p ${WTD}; git worktree add ${WTD}"
    new = diff --cached
    nw = diff --cached --color-words='\\w+'
    nww = diff --cached --color-words='.'
    pl = !git pull && git log ORIG_HEAD..origin/$(git branch --show-current)
    psuh = push
    reb = rebase
    rem = remote -v
    remove-gone = "!git branch -av | grep -E '^[^\\+].*\\[gone]' | awk '{ print $1 }' | xargs git branch -D #"
    root = rev-parse --show-toplevel
    s = status
    shw = show --color-words='\\w+'
    shww = show --color-words='.'
    sorry = commit --amend --no-edit
    st = status
    sw = switch
    track = "!git branch --set-upstream-to=${1:-origin}/$(git branch --show-current) $(git branch --show-current) #"
    whatchanged = log ORIG_HEAD..HEAD
    wt = worktree
[branch]
    autosetuprebase = always
[pull]
    rebase = true
[credential]
    helper = store
[core]
    attributesfile = ~/.gitattributes_global
    excludesfile = ~/.gitignore_global
    editor = vim
    quotepath = off
[push]
    default = current
[color]
    status = always
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    required = true
[fetch]
    prune = true
[diff "sopsdiffer"]
	textconv = sops -d
[rerere]
	enabled = true
