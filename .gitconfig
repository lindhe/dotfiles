[user]
    name = Andreas Lindh√©
    email = andreas@lindhe.io
[alias]
    b = branch
    bi = bisect
    bra = branch -v
    c = commit
    change = commit --amend -v
    cl = clone
    cm = commit -m
    co = checkout
    com = commit -v
    df = diff --color-words
    dif = diff
    dra = pull
    files-in = diff-tree --no-commit-id --name-only -r
    h = help
    knuff = push
    l = log --oneline --decorate
    lob = log --oneline --decorate --graph --branches
    log = log --decorate
    new = diff --cached
    nu = diff --cached --color-words
    nw = diff --cached --color-words
    pl = !git pull && git log ORIG_HEAD..origin/$(git branch --show-current)
    reb = rebase
    rem = remote -v
    s = status
    sho = show
    sorry = commit --amend --no-edit
    st = status
    sw = switch
    whatchanged = log ORIG_HEAD..HEAD
    wt = worktree
[branch]
    autosetuprebase = always
[pull]
    rebase = true
[credential]
    helper = cache
[core]
    excludesfile = ~/.gitignore_global
    editor = vim
    quotepath = off
[push]
    default = simple
[color]
    status = always
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    required = true
[fetch]
    prune = true
