[alias]
    bra = branch
    cl = clone
    co = checkout
    com = commit -v
    coma = commit -av
    comam = commit -am
    comm = commit -m
    df = diff --color-words
    dif = diff
    h = help
    l = log --oneline --decorate
    lg = log --oneline --decorate
    log = log --decorate
    reb = rebase
    rem = remote
    s = status
    sho = show
    st = status
#   difftex = difftool -y -t latex
[branch]
    autosetuprebase = always
[pull]
    rebase = true
[credential]
    helper = cache
[core]
    excludesfile = ~/.gitignore_global
# [difftool.latex]
#    cmd = latexdiff "$LOCAL" "$REMOTE"
[push]
    default = simple
[color]
    status = always
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
