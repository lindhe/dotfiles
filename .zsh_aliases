# shellcheck disable=SC2148
# vim: foldmethod=marker

declare -r DOTFILES_DIR="${HOME}/dotfiles"
declare -r SCRIPTS_DIR="${HOME}/git/lindhe/scripts"

alias .....="cd ../../../.."
alias ....="cd ../../.."
alias ...="cd ../.."
alias ..="cd .."
alias bat="batcat --style=header --paging=never --wrap=never"
alias bbb="${SCRIPTS_DIR}/terminal/bbb.sh"
alias bless="batcat --paging=always"
alias c="cargo"
alias copy="${SCRIPTS_DIR}/terminal/copy.sh"
alias d="docker"
alias dc="docker-compose"
alias dot="cd ${DOTFILES_DIR}"
alias dusch="du -sch .[^.]* * | sort -h"
alias ed='pushd -q $(mktemp -d)'
alias g="git"
alias ga="git add -p"
alias gap="git add -p"
alias gc="git commit"
alias gg="git grep -i"
alias gi="git"
alias gil="git l"
alias gip="git pl"
alias gipp="git stash && git pl && git stash pop"
alias gitdiff="git diff --no-index --"
alias gl="git ll"
alias gs="git status"
alias h="helm"
alias jqless="jq -C '' | less -Ri"
alias k="kubectl"
alias kc="kubectl config"
alias kd="kubectl --dry-run=client -o yaml"
alias kcc="kubectl config get-contexts | grep '*'"
alias keyboard="xset r rate 330 75; setxkbmap se-A5; setxkbmap -option caps:swapescape"
alias kns="kubectl config set-context --current --namespace"
alias l="ls -FHhlv --color=always --group-directories-first"
alias ll="l -a"
alias mdl="markdownlint"
alias mdm="toggle_md_mode"
alias mkdir="mkdir -p"
alias monitors="${SCRIPTS_DIR}/laptop/monman.py -a && echo 'Monitors on'"
alias nvimrc="nvim ~/.config/nvim/init.vim"
alias open="xdg-open"
alias sudo="sudo -E "
alias tf="terraform"
alias tree="tree -C --gitignore"
alias unmonitors="xrandr --output eDP-1 --auto --primary --output HDMI-1 --off --output DP-1 --off --output DP-2 --off; echo 'off'"
alias vimcognito="vim -i NONE -u NONE -U NONE --cmd 'set noswapfile' --cmd 'set nobackup'"
alias vimp="vim -p"
alias watch="watch --color "
alias yqless="yq -C eval | less -Ri"
alias zshrc="nvim ~/.zshrc"
