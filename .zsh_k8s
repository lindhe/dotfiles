# vim: foldmethod=marker

if command -v kubectl &> /dev/null; then

  export KUBECONFIG="${HOME}/.kube/config"

  #####################     Source all k8s config files     #####################
  export KUBECONFIG_DIRS=(
    $KUBECONFIG_DIRS
    ${HOME}/.k3d
  )
  for dir in ${KUBECONFIG_DIRS}; do
    if [[ -d ${dir} ]]; then
      for config in $(find "${dir}" -type f -name "*.yaml"); do
        export KUBECONFIG="${KUBECONFIG}:${config}"
      done
    fi
  done

  ####################     Set colordiff for kubectl diff     ####################
  if command -v colordiff &> /dev/null; then
    export KUBECTL_EXTERNAL_DIFF="colordiff -N -u"
  else
    echo "* colordiff is missing" >> ${TODOFILE}
  fi

  #############################     Completions     #############################
  X_COMPLETION_ZSH=(
    ${X_COMPLETION_ZSH}
    cilium
    helm
    hubble
    k3d
    kubectl
    kustomize
    minikube
  )

else
  echo "* kubectl is missing" >> ${TODOFILE}
fi
