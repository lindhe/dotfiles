# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
separator_block_width=20

[media]
command=$SCRIPT_DIR/mediaplayer
align=left
min_width=1225
interval=1
color=#FF8000

[upload]
label=↑
command=$SCRIPT_DIR/bandwidth tx
min_width=00000000 kB/s
align=right
color=#e22c56
interval=1

[download]
label=↓
command=$SCRIPT_DIR/bandwidth rx
min_width=00000000 kB/s
align=right
color=#00ff00
interval=1
separator=true

[memory]
label=MEM
command=$SCRIPT_DIR/memory
separator=false
interval=30

[swap]
label=SWAP
instance=swap
command=$SCRIPT_DIR/memory
interval=30

[volume]
#label=VOL
label=♪
command=$SCRIPT_DIR/volume
instance=Master
#interval=once
interval=1
signal=10

[time]
command=date '+%Y-%m-%d %H:%M:%S'
interval=1
