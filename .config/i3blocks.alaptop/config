# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
separator_block_width=15

[upload]
label=↑
command=~/.config/i3blocks/scripts/bandwidth tx
min_width=00000 kB/s
align=left
color=#e22c56
interval=1 # IMPORTANT

[download]
label=↓
command=~/.config/i3blocks/scripts/bandwidth rx
min_width=00000 kB/s
align=left
color=#00ff00
interval=1 # IMPORTANT
separator=true

[wireless]
command=$SCRIPT_DIR/network wlp4s0 W
color=#00FF00
interval=10

[battery]
label=⚡
command=$SCRIPT_DIR/battery BAT0
# command=acpi -b
interval=30

[memory]
label=MEM
command=$SCRIPT_DIR/memory
separator=false
interval=30

[swap]
label=SWAP
instance=swap
command=$SCRIPT_DIR/memory
interval=30

[volume]
#label=VOL
label=♪
command=$SCRIPT_DIR/volume
instance=Master
interval=1
signal=10

[time]
command=date '+%Y-%m-%d %H:%M:%S'
interval=1
