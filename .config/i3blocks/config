# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
separator_block_width=15

[memory]
label=MEM
command=$SCRIPT_DIR/memory
separator=false
interval=30

[swap]
label=SWAP
instance=swap
command=$SCRIPT_DIR/memory
interval=30

[wireless]
command=$SCRIPT_DIR/network wlp2s0 W
color=#00FF00
interval=10

[battery]
label=⚡
command=$SCRIPT_DIR/battery BAT1
#command=acpi -b
interval=30

[volume]
#label=VOL
label=♪
command=$SCRIPT_DIR/volume
instance=Master
interval=once
signal=10

[time]
command=date '+%Y-%m-%d %H:%M:%S'
interval=1
