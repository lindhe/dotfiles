# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks

# Global properties
separator_block_width=20

[media]
command=$SCRIPT_DIR/mediaplayer/mediaplayer
align=right
interval=1
color=#FF8000
instance=spotify

[upload]
label=↑
command=~/.config/i3blocks/scripts/bandwidth tx
min_width=00000 kB/s
align=left
color=#e22c56
interval=1 # IMPORTANT

[download]
label=↓
command=~/.config/i3blocks/scripts/bandwidth rx
min_width=00000 kB/s
align=left
color=#00ff00
interval=1 # IMPORTANT
separator=true

[iface]
command=$SCRIPT_DIR/iface/iface
color=#00FF00
interval=10

[battery]
label=⚡
command=$SCRIPT_DIR/battery/battery BAT0
interval=30

[memory]
label=MEM
command=$SCRIPT_DIR/memory/memory
separator=false
interval=30

[volume]
label=♪
command=$SCRIPT_DIR/volume/volume
instance=Master
interval=1
signal=10

[time]
command=date '+%Y-%m-%d %H:%M:%S'
interval=1

