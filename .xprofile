#!/usr/bin/env bash
#
#~/.xprofile

# Set languages
setxkbmap se-A5
# setxkbmap -option grp:lctrl_lwin_toggle

# Misc
setxkbmap -option caps:swapescape;
xset r rate 325 75;
xset b off;
xset s off;
xset -dpms;
xsetroot -solid black;
# feh --bg-scale  ~/Pictures/images/wallpaper/svorak-A1-wallpaper.png

SYS_PROD_NAME=$(sudo dmidecode -s system-product-name)
if [["${SYS_PROD_NAME}" == "20HRCTO1WW"]];then
    xinput set-prop "TPPS/2 ALPS TrackPoint" "libinput Scroll Method Enabled" 0 0 1;
fi
